pipeline {
    agent any

    environment {
        PATH = "/usr/bin:$PATH"
    }

    stages {
        stage('Verificar Repositório') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/lain77/BackendOxcart.git']]
                ])
            }
        }

        stage('Instalar Dependências') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Construir Imagem Docker') {
            steps {
                script {
                    def appName = 'oxcart'
                    def imageTag = "oxcart:${env.BUILD_ID}"
                    sh "docker build -t ${imageTag} ."
                }
            }
        }

        stage('Fazer Deploy') {
            steps {
                script {
                    def appName = 'oxcart'
                    def imageTag = "oxcart:${env.BUILD_ID}"

                    sh "docker stop ${appName} || true"
                    sh "docker rm -v ${appName} || true"

                    sh "docker run -d --name ${appName} -p 8415:8415 ${imageTag}"
                }
            }
        }
    }

    post {
        success {
            echo 'Deploy realizado com sucesso!'
        }
        failure {
            echo 'Houve um erro durante o deploy.'
        }
    }
}
